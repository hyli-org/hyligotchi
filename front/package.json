{
  "name": "hyligotchi-js",
  "version": "1.0.2",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:lib": "tsc && vite build --config vite.lib.config.ts",
    "build:demo": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepare": "npm run build:lib"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "glob": "^11.0.2",
    "globals": "^16.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "keywords": [
    "react",
    "tamagotchi",
    "widget",
    "digital-pet",
    "game",
    "ui-component"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hyli-org/hyligotchi.git"
  },
  "license": "MIT",
  "description": "A React library for creating interactive Tamagotchi-style digital pets with customizable features and orange-themed gameplay.",
  "dependencies": {
    "ajv": "8"
  }
}
